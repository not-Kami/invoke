# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/invoke
# Alternative: MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/invoke?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=30d

# CORS Configuration
FRONTEND_URLS=http://localhost:3000,http://localhost:5173,https://invoke.efp.be,https://invoke.neant.dev,https://staging.invoke.neant.dev

# Logging Configuration
LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SENSITIVE_OPERATION_WINDOW_MS=900000
SENSITIVE_OPERATION_MAX_REQUESTS=5

# Cookie Configuration (Auto-configured based on NODE_ENV)
# httpOnly: true (always)
# secure: true (production), false (development/test)
# sameSite: strict (production), lax (test)
# maxAge: 30 days
# path: /

# Test Configuration (for running tests)
# These values are automatically set in test environment
# JWT_SECRET=test-secret-key
# MONGODB_URI=your-test-database-uri 